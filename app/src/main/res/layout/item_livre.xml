<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10sp"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_livre"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/app_name" />
    <TextView
        android:id="@+id/titre_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15sp"
        android:textSize="20sp"
        android:textColor="@color/md_theme_light_tertiary"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/image_view_livre"
        android:text="@string/titre"/>
    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/titre_text_view"
        android:textSize="12sp"
        android:textColor="@color/md_theme_light_tertiary"
        android:layout_marginTop="15sp"
        android:layout_below="@+id/titre_text_view"
        android:text="@string/description"/>
    <TextView
        android:id="@+id/prix_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20sp"
        android:textColor="@color/md_theme_light_tertiary"
        android:textStyle="bold"
        android:text="@string/prix"
        android:textSize="15sp"/>





</RelativeLayout>